@model UTP.PortalEmpleabilidad.Modelo.OfertaEstudio


<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="Estudio">Estudio específico</h4>
    </div>
    <div class="modal-body">

        @Html.HiddenFor(m => m.IdOferta)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-12">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Tipo</span>
                    @Html.DropDownListFor(m => m.TipoDeEstudioIdListaValor, null, "- Seleccione Tipo de Estudio -", htmlAttributes: new { @class = "form-control" })

                </div>
                @Html.ValidationMessageFor(m => m.TipoDeEstudioIdListaValor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Estudio</span>
                    @*<input type="text" name="Estudio" class="form-control" placeholder="Nombre del estudio">*@
                    @Html.TextBoxFor(m => m.Estudio, new { @class = "form-control", @placeholder = "Nombre del estudio" })

                </div>
                @Html.ValidationMessageFor(m => m.Estudio, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Estado</span>
                    @Html.DropDownListFor(m => m.EstadoDelEstudioIdListaValor, null, "- Seleccione Estado del Estudio -", htmlAttributes: new { @class = "form-control" })

                </div>
                @Html.ValidationMessageFor(m => m.EstadoDelEstudioIdListaValor, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Ciclo</span>
                    @*<input type="text" class="form-control" name="CicloEstudio" placeholder="Ciclo míninmo del Estudio">*@
                    @Html.TextBoxFor(m => m.CicloEstudio, new { @class = "form-control", @placeholder = "Ciclo míninmo del Estudio" })
                </div>
                
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-default color-paleta2 fuente-pequeña" style="color: white; margin-bottom: 10px;">
                    Guardar Estudio específico
                </button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        AutoCompleteText('#Estudios', '@Url.Action("ListarEstudio", "OfertaEstudio")', '#Estudio');
    });

</script>