@model IEnumerable<UTP.PortalEmpleabilidad.Modelo.OfertaEstudio>

<div class="row">
    <div class="col-md-12">
        <strong class="sub-titulo-seccion">Carreras</strong>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-6">
        <select id="CarrerasDisponibles" multiple style="width: 250px;height: 300px;">              
            @*<option>Carrera 2</option>
            <option>Carrera 4</option>
            <option>Carrera 6</option>*@
            @foreach (var item in (SelectList)TempData["ListaCarrerasDisponibles"])
            {
                <option style="font-size:8px;">@item.Text</option> 
            }
        </select>
    </div>
    <div class="col-sm-1" style="text-align:center;">
        <br />
        <span class="btn btn-default btn-xs fa fa-arrow-right color-paleta2" onclick="agregarCarrera();"></span>
        <br />
        <span class="btn btn-default btn-xs fa fa-arrow-left color-paleta2"></span>
    </div>
    <div class="col-sm-5" style="text-align:right;">
        <select id="CarrerasSeleccionada" multiple style="width: 210px;height: 300px;">
            @foreach (var item in (SelectList)TempData["ListaCarrerasUTP"])
            {
                <option style="font-size:8px;">@item.Text</option>
            }
        </select>
    </div>

</div>
<div class="row">
    <div class="col-sm-6">
        <div class="input-group">
            <div class="input-group-addon">
                (*) Estado
            </div>
            <select class="form-control">
                <option>Estado 1</option>
                <option>Estado 2</option>
                <option>Estado 3</option>
                <option>Estado 4</option>
            </select>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="input-group">
            <div class="input-group-addon">
                Ciclo<br />Mínimo
            </div>
            <input class="form-control" placeholder="Ciclo mínimo de estadio">
        </div>
    </div>
    
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <strong class="sub-titulo-seccion">Otros Estudios</strong>
    </div>
</div>
<br />

@foreach (var item in Model)
{
    <div class="row fuente-pequeña">
        <div class="col-sm-7">
            <table class="fuente-pequeña">
                <tr>
                    <td class="celda-nombre">Tipo</td>
                    <td class="celda-datos">@item.TipoDeEstudio.Valor</td>
                </tr>
                <tr>
                    <td class="celda-nombre">Estudio</td>
                    <td class="celda-datos">@item.Estudio</td>
                </tr>

                <tr>
                    <td class="celda-nombre">Estado</td>
                    <td class="celda-datos">@item.EstadoDelEstudio.Valor</td>
                </tr>
                <tr>
                    <td class="celda-nombre">Ciclo mínimo</td>
                    <td class="celda-datos">@item.CicloEstudio</td>
                </tr>
                <tr>
                    <td class="celda-nombre"></td>
                    <td class="celda-datos"></td>
                </tr>
            </table>
        </div>
        @*<div class="col-sm-5">
                <br />
                <button class="btn btn-primary btn-sm" onclick="editarEstudio(@item.IdOfertaEstudio);" data-id="@item.IdOfertaEstudio">Editar</button>
                <button class="btn btn-danger btn-sm"  onclick="eliminarEstudio(@item.IdOfertaEstudio);" data-id="@item.IdOfertaEstudio">Eliminar</button>
            </div>*@
        <div class="col-sm-5">
            <label class="btn btn-default fa fa-pencil color-paleta2" onclick="editarEstudio(@item.IdOfertaEstudio);" data-id="@item.IdOfertaEstudio"></label>
            &nbsp;&nbsp;
            <label class="btn btn-default fa fa-remove color-paleta2" onclick="eliminarEstudio(@item.IdOfertaEstudio);" data-id="@item.IdOfertaEstudio"></label>
        </div>
    </div>
    <br />
}

<div class="row">
    <div class="col-sm-12" style="text-align:right;">
        @*<button id="btnNuevoEstudio" data-toggle="modal" data-target="#divModalEstudio" onclick="crearEstudio(@ViewBag.IdOferta)" class=" btn btn-default color-paleta2">
            Agregar Estudio específico
        </button>*@
        <label id="btnNuevoEstudio" data-toggle="modal" data-target="#divModalEstudio" onclick="crearEstudio(@ViewBag.IdOferta)" class=" btn btn-default color-paleta2">
            Agregar Estudio específico
        </label>
    </div>
</div>

