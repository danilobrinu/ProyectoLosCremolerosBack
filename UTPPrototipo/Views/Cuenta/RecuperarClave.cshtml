@model UTP.PortalEmpleabilidad.Modelo.Usuario

@using (Ajax.BeginForm("GenerarToken", "Cuenta", new AjaxOptions()))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    @*<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>*@

    <div class="modal-header">

        <div class="row">
            <div class="col-sm-12" style="text-align:left;">Nota: Ingrese su Usuario y a continuacion haga click en Enviar. Le enviaremos una clave token a su cuenta de correo que tenemos registrada para validar su información y pueda cambiar su contraseña, Si la ventana se cierra debera volver a generar la clave token</div>
        </div>
    </div>
    <div class="modal-body">
        @if (TempData["CorreoExitoso"] != null)
        {
            <script>

                $(document).ready(function () {

                    alert('@TempData["CorreoExitoso"]');

                });

            </script>
        }
        @if (TempData["TokenNoExitoso"] != null)
        {
            <script>

                $(document).ready(function () {

                    alert('@TempData["TokenNoExitoso"]');

                });

            </script>
        }
        <form>

            <div class="input-group grupo-ingreso">
                <span class="input-group-addon nombre-campo">Usuario</span>
                @*<input type="text" class="form-control" placeholder="Usuario" style="width:100%;">*@
                @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control",  @id = "Nusuario"})

            </div>@Html.ValidationMessageFor(m => m.NombreUsuario, "", new { @class = "text-danger" })
            <button type="submit" class="btn btn-default" value="mail" name="submitButton">
                <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            </button>
            <div class="input-group grupo-ingreso">
                <span class="input-group-addon nombre-campo">Token</span>
                @*<input type="password" class="form-control" placeholder="Clave">*@
                @*@Html.TextBoxFor(m => m.Contrasena, new { @class = "form-control" })*@
                @Html.TextBoxFor(m => m.Token, new { @class = "form-control", @id = "token" })

            </div>@Html.ValidationMessageFor(m => m.Token, "", new { @class = "text-danger" })

            @*<div class="grupo-ingreso" style="text-align:center;">
                    <input type="checkbox">
                    <span class="label-sistema"> No Cerrar mi Sesión </span>
                </div>*@
            @*<br />*@

            <div class="text-center" style="width: 100%;">
                <!--<input id="btnIngresar" type="submit" value="Ingresar" name="submitButton" class="btn btn-default" />-->
                <button id="btnIngresar" type="button" class="btn btn-default">Ingresar</button>
            </div>

        </form>
    </div>
}
<script>

    $(document).ready(function () {
        var $singinButton = $('#btnIngresar');
        var $recoverPasswordModal = $('#Modal-cambiar-clave'),
            $recoverPasswordModalButton = $recoverPasswordModal.find('button'),
            $passwordInput = $('#contrasena-text'),
            $repeatPasswordInput = $('#repiteContrasena-text');

        console.log($recoverPasswordModalButton);

        $singinButton.click(function () {
            var usuario = $('#Nusuario').val();
            var token = $('#token').val();
            var $currentModal = $('.modal.in');

            $.ajax({
                url: 'Cuenta/GenerarToken',
                method: 'POST',
                data: { usuario: usuario, submitButton: 'Ingresar', token: token }
            })
                .done(function (data) {
                    console.log(data);
                    var $title = $recoverPasswordModal.find('.modal-title span'),
                        $usuario = $recoverPasswordModal.find('input.hidden');

                    $title.text(data.NombreUsuario);
                    $usuario.val(data.NombreUsuario);

                    $currentModal.modal('hide');
                    $recoverPasswordModal.modal('show');
                })
                .fail(function (xhr, error) { });
        });

        $recoverPasswordModalButton.click(function (e) {
            var valid = true;
            var message = '';

            if ($passwordInput.val() == '') {
                valid = false;
                message += 'No puede dejar contraseña vacia \n';
            }

            if ($passwordInput.val() != $repeatPasswordInput.val()) {
                valid = false;
                message += 'Las contraseñas deben ser iguales';
            }

            if (!valid) {
                e.preventDefault();
                e.stopPropagation();
                alert(message);
            }
            else {
                alert('Se cambio su contraseña correctamente')
            }
        });

    });

</script>