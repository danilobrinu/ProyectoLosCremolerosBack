@model List<UTP.PortalEmpleabilidad.Modelo.OfertaInformacionAdicional>

<div class="row">
    <div class="col-md-12">
        <strong class="sub-titulo-seccion">Información Adicional</strong>
    </div>
</div>
<br />

@foreach (var item in Model)
{
    <table class="fuente-pequeña">
        <tr>
            <td class="celda-nombre">Tipo</td>
            <td class="celda-datos">@item.TipoConocimiento</td>
        </tr>
        <tr>
            <td class="celda-nombre">Conocimiento</td>
            <td class="celda-datos">@item.Conocimiento</td>
        </tr>
        <tr>
            <td class="celda-nombre">Nivel</td>
            <td class="celda-datos">@item.NivelConocimiento</td>
        </tr>
        <tr>
            <td class="celda-nombre">Años de experiencia</td>
            <td class="celda-datos">@item.AniosExperiencia</td>
        </tr>
        <tr>
            <td class="celda-nombre"></td>
            <td class="celda-datos">
                <p class="fui fa-2x" style="color:gray;">
                    1 l
                </p>
            </td>
        </tr>
    </table>
    <br />
}



<div class="row">
    <div class="col-sm-12" style="text-align:right;">
        <button data-toggle="modal" data-target="#Modal-inf-adicional" class="btn btn-default color-paleta2">Agregar Información Adicional</button>
    </div>
</div>


<div class="modal" id="Modal-inf-adicional" tabindex="-1" role="dialog" aria-labelledby="Estudio" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="Estudio">Información adicional</h4>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group fuente-pequeña">
                            <span class="input-group-addon">Tipo</span>

                            
                            <select id="Lista" class="form-control">
                                <option value="" selected>-- Seleccione el Tipo de Conocimiento --</option>
                                <option>Informática</option>
                                <option>Idioma</option>
                                <option>Cursos/Seminarios</option>
                                <option>Pasatiempo</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group fuente-pequeña">
                            <span class="input-group-addon">Nombre</span>
                            <input type="text" class="form-control" placeholder="Nombre del Conocimiento">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-group fuente-pequeña">
                            <span class="input-group-addon">Nivel</span>
                            <select id="Lista" class="form-control">
                                <option value="" selected>Nivel del conocimiento</option>
                                <option>Básico</option>
                                <option>Medio</option>
                                <option>Avanzado</option>
                                <option>Experto</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group fuente-pequeña">
                            <span class="input-group-addon">Años de<br />Experienia</span>
                            <input type="text" class="form-control" placeholder="Años de Experiencia">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 text-right"><button type="button" class="btn btn-default color-paleta4 fuente-pequeña" style="color: white; margin-bottom: 10px;">Grabar Información Adicional</button></div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>