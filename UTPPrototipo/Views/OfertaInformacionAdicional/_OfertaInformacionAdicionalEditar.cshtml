@model UTP.PortalEmpleabilidad.Modelo.OfertaInformacionAdicional

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="Estudio">Información adicional</h4>
    </div>
    <div class="modal-body">

        @Html.HiddenFor(m => m.IdOferta)
        @Html.HiddenFor(m => m.IdOfertaInformacionAdicional)

        <div class="row">
            <div class="col-md-12">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Tipo</span>

                    @Html.DropDownList("TipoConocimientoIdListaValor", null, htmlAttributes: new { @class = "form-control" })

                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Nombre</span>
                    <input type="text" class="form-control" placeholder="Nombre del Conocimiento" name="Conocimiento" value="@Model.Conocimiento" />                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Nivel</span>

                    @Html.DropDownList("NivelConocimientoIdListaValor", null, htmlAttributes: new { @class = "form-control" })

                    @*<select id="Lista" class="form-control">
                        <option value="" selected>Nivel del conocimiento</option>
                        <option>Básico</option>
                        <option>Medio</option>
                        <option>Avanzado</option>
                        <option>Experto</option>
                    </select>*@
                </div>
            </div>
            <div class="col-sm-6">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Años de<br />Experiencia</span>
                    <input type="text" class="form-control" placeholder="Años de Experiencia" name="AniosExperiencia" value="@Model.AniosExperiencia">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-default color-paleta4 fuente-pequeña" style="color: white; margin-bottom: 10px;">
                    Grabar Información Adicional
                </button>                
            </div>
        </div>
    </div>
    <div class="modal-footer">
    </div>
</div>
