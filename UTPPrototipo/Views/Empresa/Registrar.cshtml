@model UTP.PortalEmpleabilidad.Modelo.Empresa

@{
    Layout = "~/Views/Empresa/_LayoutEmpresa.cshtml";
    ViewBag.Title = "Registrar";
}

<div class="container" style="margin-top:2px;">
    
    <h4>Registrar empresa</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                <label class="col-md-2">Nombre</label>                
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreComercial)
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">Razón Social</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RazonSocial)
                </div>
            </div>

            <div class="form-group">                
                <label class="col-md-2">Identificador Tributario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdentificadorTributario)
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2">País</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pais)
                </div>
            </div>            

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" class="btn btn-default" />
                </div>
            </div>

        </div>
    }
   
 </div>
    



