@model UTP.PortalEmpleabilidad.Modelo.ListaValor 
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Nuevo Valor de Lista</h4>
    </div>


    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon">ID</span>
                    @*<input type="text" class="form-control" placeholder="Identificador de Valor (6 digitos)">*@

                    @Html.TextBoxFor(model => model.IdListaValor, new { @class = "form-control", rows = "3", @placeholder = "Identificador de Valor (6 digitos)" })
                 
                    @Html.ValidationMessageFor(model => model.IdListaValor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="input-group">
                    <span class="input-group-addon">Valor</span>
                    @*<input type="text" class="form-control" placeholder="Texto del Valor">*@
                    @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", rows = "3", @placeholder = "Texto del Valor" })
                    @Html.ValidationMessageFor(model => model.Valor)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="input-group">
                    <span class="input-group-addon">Descrip-<br />ción</span>
                    @*<textarea class="form-control" rows="4">Descripción</textarea>*@
                    @Html.TextAreaFor(model => model.DescripcionValor, new { @class = "form-control", rows = "3", @placeholder = "Descripcion" })
                    @Html.ValidationMessageFor(model => model.DescripcionValor)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon">Ícono</span>
                    @*<input type="text" class="form-control fui fa-2x">*@
                    @Html.TextBoxFor(model => model.Icono, new { @class = "form-control fui fa-2x"})
                    @Html.ValidationMessageFor(model => model.Icono)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon">Peso</span>
                    @*<input type="text" class="form-control" placeholder="Peso u orden numérico: 0-999">*@
                    @Html.TextBoxFor(model => model.Peso, new { @class = "form-control", rows = "3", @placeholder = "Peso" })
                    @Html.ValidationMessageFor(model => model.Peso)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="input-group">
                    <span class="input-group-addon">Valor UTP</span>
                    @*<input type="text" class="form-control" placeholder="Valor o código UTP para este valor">*@
                    @Html.TextBoxFor(model => model.ValorUTP, new { @class = "form-control", rows = "3", @placeholder = "Valor o código UTP para este valor" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="input-group">
                    <span class="input-group-addon">Estado</span>

                    @Html.DropDownListFor(model => model.EstadoValor, new List<SelectListItem>{
                    new SelectListItem() {Text = "Activo", Value="Activo"},
                    new SelectListItem() {Text = "No Activo", Value="No Activo"}

                    }, "-Seleccione-", new { @class = "form-control" })

                </div>
            </div>
        </div>

        @*<div class="row">
            <div class="col-sm-6">
                <div class="input-group">
                    <span class="input-group-addon">Estado</span>
                    <select class="form-control">
                        <option value="">
                            - Seleccionar -
                        </option>
                        <option>
                            Activo
                        </option>
                        <option>
                            No Activo
                        </option>
                       
                    </select>
                </div>
            </div>
        </div>*@
    </div>
    <div class="modal-footer">
        <button class="btn btn-default color-paleta8">Guardar</button>
    </div>
</div>
