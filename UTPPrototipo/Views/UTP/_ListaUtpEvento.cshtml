
@using UTPPrototipo.Common
@model IEnumerable<UTPPrototipo.Models.ViewModels.UTP.VistaObtenerEventosUTP>
@using UTP.PortalEmpleabilidad.Modelo
@{
    <!--Se obtiene los datos para la paginación.-->
    Paginacion paginacion = (Paginacion)ViewBag.Paginacion;
}
<div class="row grilla1-cabecera color-paleta5">
    <div class="col-sm-2">
        Fecha Evento
    </div>
    <div class="col-sm-2">
        Evento
    </div>
    <div class="col-sm-2">
        Lugar
    </div>
    <div class="col-sm-2">
        Dirección
    </div>
    @*<div class="col-sm-2">
            Expositor
        </div>*@
    <div class="col-sm-2">
        Asistente Esperado
    </div>
</div>

@foreach (var item in Model)
{

    <div class="row grilla1-linea">
        <div class="col-sm-2">
            @item.FechaEvento
        </div>
        <div class="col-sm-2">
            @*@item.NombreEvento*@

            @Html.ActionLink(@item.NombreEvento, "Evento_Editar", new { id = item.IdEvento })
        </div>
        <div class="col-sm-2">
            @item.LugarEvento
        </div>
        <div class="col-sm-2">
            @item.DireccionEvento
        </div>
        @*<div class="col-sm-2">
                @item.Expositor
            </div>*@
        <div class="col-sm-2">
            @item.AsistentesEsperados
        </div>
    </div>
}


<div>
    <!--Paginación-->
    <nav class="navbar-right">
        <ul class="pagination">
            @{
                for (int i = 1; i <= paginacion.TotalPaginas; i++)
                {
                    if (i == paginacion.NroPaginaActual)
                    {
                        <li class="active"><a href="#">@i <span class="sr-only"></span></a></li>
                    }
                    else
                    {
                        <li><a href="#" onclick="buscarPaginacion('@i');">@i</a></li>
                    }
                }
            }
        </ul>
    </nav>
</div>