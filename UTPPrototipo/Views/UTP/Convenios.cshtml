@model IEnumerable<UTP.PortalEmpleabilidad.Modelo.Vistas.Convenio.VistaUTPListaConvenio>

@{
    Layout = "~/Views/UTP/_LayoutUTP.cshtml";
    ViewBag.Title = "Convenios";
}
<link href="~/Content/font-awesome.css" rel="stylesheet" />


<div class="container" style="margin-top:2px;">
    <div class="panel-group" id="datos-cuenta" role="tablist" aria-multiselectable="true">

        @{Html.RenderAction("VistaCabeceraUtp", "UTP");}

    </div>
    <div class="panel-group" id="CriterioBusquedaConvenio" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="CabeceraColapsaBusquedaConvenio" style="padding: 2px 2px 2px 6px;">
                <h5 class="panel-title">
                    <a data-toggle="collapse" data-parent="#CriterioBusquedaConvenio" href="#ColapsaBusquedaConvenio" aria-expanded="true" aria-controls="ColapsaBusquedaConvenio" class="fuente-seccion">
                        Búsqueda Convenios
                    </a>
                </h5>
            </div>
            <div id="ColapsaBusquedaAlumno" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="CabeceraColapsaBusquedaConvenio">
                <div class="panel-body">
                    <table style="width:100%;">
                        <tr>
                            @using (Html.BeginForm("Convenios", "UTP", FormMethod.Post))
                            {
                                @*@Html.AntiForgeryToken()*@
                                <td>
                                    <div class="input-group">
                                        <span class="input-group-addon">Palabra Clave</span>
                                        @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder = "Busca Por Apellidos & Nombre" })

                                    </div>


                                </td>
                                <td style="text-align:right;">
                                    <span class="col-md-6 btn-group">

                                        <button type="submit" class="btn btn-default color-paleta9 fa fa-search" />

                                    </span>
                                </td>
                            }

                            @*aqui iva*@
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>

    <br />
    <h5>Convenios Registrados</h5>
    <div class="row grilla1-cabecera color-paleta9">

        <div class="col-sm-1">
            Id
        </div>
        <div class="col-sm-2">
            Alumno
        </div>
        <div class="col-sm-2">
            Carrera
        </div>
        <div class="col-sm-2">
            Empresa
        </div>
        <div class="col-sm-1">
            Tipo Trabajo
        </div>
        <div class="col-sm-1">
            Duración
        </div>
        <div class="col-sm-1">
            Salario
        </div>
        <div class="col-sm-1">
            Área
        </div>
        <div class="col-sm-1">
            Fecha Ingreso
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row grilla1-linea">

            <div class="col-sm-1">
                @item.IdConvenio
            </div>
            <div class="col-sm-2">
                @Html.ActionLink(item.Nombres + " " + item.Apellidos, "Convenio", new { id = item.IdConvenio })

            </div>
            <div class="col-sm-2">
                @item.Carrera
            </div>
            <div class="col-sm-2">
                @item.NombreComercial
            </div>
            <div class="col-sm-1">
                @item.TipoTrabajo
            </div>
            <div class="col-sm-1">
                @item.DuracionContrato
            </div>
            <div class="col-sm-1">
                @item.SalarioOfrecido
            </div>
            <div class="col-sm-1">
                @item.AreaEmpresa
            </div>
            <div class="col-sm-1">
                @item.FechaIngreso
            </div>
        </div>
    }
    <br />
    @{Html.RenderAction("_VistaNuevoConvenio", "UTP");}
    <hr />
</div>

<script>
    $(document).ready(function () {
        $("#divFinalCabecera").removeClass("color-paleta1 color-paleta2 color-paleta3 color-paleta4 color-paleta5 color-paleta6 color-paleta7 color-paleta8").addClass("color-paleta9")
    });
</script>