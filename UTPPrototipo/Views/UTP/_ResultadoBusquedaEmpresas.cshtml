}
<br />
    <div class="row grilla1-cabecera color-paleta2">

        <div class="col-sm-2">
            Nombre
        </div>
        <div class="col-sm-2">
            Razón Social
        </div>
        @*<div class="col-sm-1">
            RUC
        </div>*@
        <div class="col-sm-2">
            Sector
        </div>
        <div class="col-sm-1">
            Clasificación
        </div>
        <div class="col-sm-1">
            Ejecutivo UTP asignado
        </div>
        
        <div class="col-sm-1">
            Estado
        </div>
       
        <div class="col-sm-1">
            Nivel Relación
        </div>
        <div class="col-sm-1">
            Facultad Principal
        </div>
        <div class="col-sm-1">
            Comentarios
        </div>

    </div>


    @foreach (var item in Model)
    {
        <div class="row grilla1-linea">

            <div class="col-sm-2">
                @*<a href="../UTP/Empresa">@item.NombreComercial</a>*@
                @Html.ActionLink(@item.NombreComercial, "VerDetalleEmpresa", new { id = item.IdEmpresa })
            </div>
            <div class="col-sm-2">
                @item.RazonSocial
            </div>
            @*<div class="col-sm-1">
                @item.RUC
            </div>*@
            <div class="col-sm-2">
                @item.SectorEmpresarial
            </div>
            <div class="col-sm-1">
                @item.Clasificacion
            </div>
            <div class="col-sm-1">
                @item.EjecutivoUTP
             
            </div>
        
            <div class="col-sm-1">
                @item.Estado
            </div>

            <div class="col-sm-1">
                @item.NivelDeRelacion 
            </div>
            <div class="col-sm-1">
                @item.FacultadPrincipal 
            </div>
            <div class="col-sm-1">
                @item.TieneComentarios
            </div>
            
            @*<div class="col-sm-2">
                @item.Ofertas
            </div>*@

        </div>
    }

