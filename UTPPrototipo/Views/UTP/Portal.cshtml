@model IEnumerable<UTP.PortalEmpleabilidad.Modelo.Contenido>
@{
    Layout = "~/Views/UTP/_LayoutUTP.cshtml";
    ViewBag.Title = "Mantenimiento de Portal";
}

<link href="~/Content/font-awesome.css" rel="stylesheet" />


<div class="container" style="margin-top:2px;">
    <h2>Portal</h2>
    <p>
        @Html.ActionLink("Crear", "Portal_insertar")
    </p>
    @using (Html.BeginForm())
    {
        <b>Lista</b>

        @Html.DropDownList("Menu", ViewData["ContenidoMenu"] as List<SelectListItem>)

        <input type="submit" value="Buscar" class="btn btn-default" />                     
        }

        <h2></h2>
                

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdContenido)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TituloMenu)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.SubTitulo)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Menu)
                </th>

                <th>
                    <b>Editar</b>
                </th>



                <th></th>
            </tr>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdContenido)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TituloMenu)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.SubTitulo)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>


                    <td>
                        @*@Html.image(modelItem => item.Imagen)*@

                        @*<img src="@item.Imagen" alt="" />*@


                        @*<img src="/Content/imagen/@item.Imagen" height="100" width="100" />*@

                        <img src="/Contenido/RetrieveImage/@item.IdContenido" alt="" height=100 width=200 />

                    </td>

                 
                    <td>
                        @Html.DisplayFor(modelItem => item.Menu)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Portal_Editar_Buscar", new { id = item.IdContenido })



                        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                    </td>
                </tr>
            }

        </table>
    


</div>
<script>

    $(document).ready(function () {
        $("#divFinalCabecera").removeClass("color-paleta1 color-paleta2 color-paleta4 color-paleta5").addClass("color-paleta3");
    });


</script>

