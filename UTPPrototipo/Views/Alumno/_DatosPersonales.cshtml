@model UTP.PortalEmpleabilidad.Modelo.Alumno

<link href="~/Content/font-awesome.css" rel="stylesheet" />

<div class="panel-group" id="datos-cuenta" role="tablist" aria-multiselectable="true">
    
    <div class="panel panel-default">
        @Html.Hidden("IdAlumno", Model.IdAlumno)
@Html.Hidden("PagOfertas", 3)
@Html.Hidden("PagOfertasPostulacion", 3)
        
        <div class="panel-heading" role="tab" id="headingOne" style="padding: 2px 2px 2px 6px;">
            <h5 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="fuente-seccion">
                    Tu Cuenta - @Model.Nombres @Model.Apellidos
                </a>
            </h5>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
                <div class="col-md-4 fuente-seccion">
                    <table>
                        <tr>
                            <td>
                                <img class="foto-usuario" src="~/img/Alumna.png" />
                            </td>
                            <td style="vertical-align:top;">
                                <strong>
                                    @Model.Nombres
                                    <br />
                                    @Model.Apellidos
                                </strong>
                                <br />@Model.Carrera
                                <br /><a href="#" class="fuente-pequeña">Modificar Datos ...</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4 fuente-pequeña">
                    Código <strong>@Model.CodAlumnoUTP</strong><br />
                    DNI <strong>@Model.NumeroDocumento</strong><br />
                    <strong>@Model.CorreoElectronico1</strong><br />
                    <strong>@Model.CorreoElectronico2</strong>

                </div>
                <div class="col-md-4 fuente-pequeña">
                    Dirección <strong>@Model.DireccionLinea1</strong><br />
                    Teléfono <strong>@Model.TelefonoFijoCasa</strong><br />
                    Celular <strong>@Model.TelefonoCelular</strong>
                </div>

            </div>
        </div>
    </div>

</div>

 
