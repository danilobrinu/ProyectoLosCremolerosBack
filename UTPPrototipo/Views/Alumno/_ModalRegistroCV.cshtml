@model UTP.PortalEmpleabilidad.Modelo.AlumnoCV
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="Estudio">Nuevo CV</h4>
    </div>
    <div class="modal-body">

        @Html.HiddenFor(m => m.IdAlumno)
        @ViewBag.Mensaje
        <div class="row">
            <div class="col-sm-12">
                <div class="input-group fuente-pequeña">
                    <span class="input-group-addon">Nombre CV</span>
                    @Html.TextBoxFor(m => m.NombreCV, htmlAttributes: new { @class = "form-control", @placeholder = "Ingrese Nombre del Nuevo CV" })
                    
                </div>@Html.ValidationMessageFor(m => m.NombreCV, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="row">
            <div class="col-sm-12 text-right"><button type="submit" class="btn btn-default color-paleta4 fuente-pequeña" style="color: white; margin-bottom: 10px;">Guardar nuevo CV</button></div>
        </div>
    </div>
    <div class="modal-footer">
    </div>
</div>
