@using UTPPrototipo.Common
@model IEnumerable<UTP.PortalEmpleabilidad.Modelo.Vistas.Ofertas.VistaPostulacionAlumno>

@{
    Layout = "~/Views/Alumno/_LayoutAlumno.cshtml";
    ViewBag.Title = "Postulaciones";
}
<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#divFinalCabecera").removeClass("color-paleta1 color-paleta3 color-paleta4 color-paleta5").addClass("color-paleta2");
        var ofertapostulacion = {
            IdAlumno: $('#IdAlumno').val(),
            PalabraClave: $('#IdPalabraClave').val()
        };

        CargarPOST("idResulBusPostulaciones", "/Alumno/BusquedaSimplePostulacionOferta", ofertapostulacion);

        $('#idBuscar').click(function () {
            var ofertapostulacion = {
                IdAlumno: $('#IdAlumno').val(),
                PalabraClave: $('#IdPalabraClave').val()
            };
            CargarPOST("idResulBusPostulaciones", "/Alumno/BusquedaSimplePostulacionOferta", ofertapostulacion);
        });

    });


    function CargarPOST(id, link, entidad) {
        $.ajax({
            url: link,
            contentType: 'application/json; charset=utf-8',
            type: 'POST',
            data: JSON.stringify(entidad),
            dataType: 'html'
        })
        .success(function (result) {
            if (id != null) {
                $("#" + id).html(result);
            }
        })
        .error(function (xhr, status) {
            console.log(xhr);
            console.log(status);

        })
    }
</script>
<div class="container" style="margin-top:2px;">
   

    @{Html.RenderAction("VistaCabecera", "Alumno");}


    <div class="panel-group" id="CriterioBusquedaPostulacion" role="tablist" aria-multiselectable="true">
