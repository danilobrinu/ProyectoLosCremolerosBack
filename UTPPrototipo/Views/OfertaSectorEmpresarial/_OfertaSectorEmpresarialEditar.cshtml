@model UTP.PortalEmpleabilidad.Modelo.OfertaSectorEmpresarial

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="ExperienciaLaboral">Experiencia Por Sector</h4>
        </div>
        <div class="modal-body">
            @Html.HiddenFor(m => m.IdOferta)
            @Html.HiddenFor(m => m.IdOfertaSectorEmpresarial)
            <div class="row">
                <div class="col-sm-12">
                    <div class="input-group fuente-pequeña">
                        <span class="input-group-addon">Sector</span>
                       @Html.DropDownList("SectorEmpresarialIdListaValor", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="input-group fuente-pequeña">
                        <span class="input-group-addon">Años de<br />Experiencia</span>
                        <input type="text" class="form-control" placeholder="Años de experiencia mínimos" name="AniosTrabajados" value="@Model.AniosTrabajados">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="input-group fuente-pequeña">
                        <span class="input-group-addon"><input type="checkbox"></span>

                        @*<span class="form-control">Excluyente</span>*@
                        @Html.CheckBoxFor(m => m.ExperienciaExcluyente)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 text-right">
                    <button type="submit" class="btn btn-default color-paleta2 fuente-pequeña" style="color: white; margin-bottom: 10px;">
                        Grabar Experiencia x Sector
                    </button>
                </div>
            </div>
        </div>
        <div class="modal-footer">
        </div>
    </div>